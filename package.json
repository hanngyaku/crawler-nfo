{
  "dependencies": {
    "axios": "^1.12.2",
    "commander": "^14.0.1",
    "crawlee": "^3.15.1",
    "date-fns": "^4.1.0",
    "path": "^0.12.7",
    "playwright": "^1.56.1"
  },
  "type": "module",
  "main": "src/index.js",
  "name" : "crawler",
  "version": "1.0.0",
  "pkg" : {    
    "scripts": "src/**/*.js",
      "assets": [
        "node_modules/playwright/**/*",
        "node_modules/linkedom/**/*",
        "node_modules/crawlee/**/*",
        "node_modules/axios/**/*",
        "node_modules/header-generator/**/*"
      ],
      "targets": [
        "node18-win-x64"
      ],
      "outputPath": "dist"
  },
  "scripts": {
    "build": "pkg . --output crawler-nfo.exe"
  },
  "bin": {
    "crawler-nfo": "src/index.js"
  }
}
